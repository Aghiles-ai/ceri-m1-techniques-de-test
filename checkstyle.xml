<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.sourceforge.io/dtds/configuration_1_3.dtd">

<module name="Checker">
    <module name="TreeWalker">
        <!-- Vérifie la longueur des lignes -->
        <module name="LineLength">
            <property name="max" value="120"/> <!-- Maximum 120 caractères par ligne -->
            <property name="ignorePattern" value="^$"/> <!-- Ignore les lignes vides -->
        </module>

        <!-- Vérifie les noms de classes -->
        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Vérifie les noms des méthodes -->
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Vérifie les noms des variables -->
        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Vérifie que les blocs if/else/while/for ont des accolades -->
        <module name="NeedBraces"/>

        <!-- Vérifie qu'il y a une ligne vide en fin de fichier -->
        <module name="NewlineAtEndOfFile"/>

        <!-- Vérifie qu'il n'y a pas d'import inutilisé -->
        <module name="UnusedImports"/>

        <!-- Vérifie l'ordre des imports -->
        <module name="ImportOrder">
            <property name="order" value="java,javax,org,com"/>
            <property name="separateLineBetweenGroups" value="true"/>
        </module>

        <!-- Vérifie qu'il n'y a pas d'espace en trop -->
        <module name="TrailingWhitespace"/>
    </module>
</module>
